<%- include('./partials/head.ejs', {Titulo : 'Mecenazgo | Mi Perfil' }) -%>

<%- include('./partials/header') -%>


<div class="card" style="text-align: center; margin-left: 25%;">

    <div class="card-body">
        <h3 class="card-title">Mi perfil</h3>
        <form action="">
            <div class="col-md-4">
                <label for="validationServer01" class="form-label">Nombre</label>
                <input type="text" class="form-control " id="validationServer01" value="<%= userSession.first_name %> " readonly name='nombre'>
          
              </div>
          
              <div class="col-md-4">
                <label for="validationServer02" class="form-label">Apellido</label>
                <input type="text" class="form-control " id="validationServer02" value="<%= userSession.last_name  %> " readonly name='apellido'>
          
              </div>
          
              <div class="col-md-4">
                  <label for="validationServer02" class="form-label">Email</label>
                  <input type="email" class="form-control " id="validationServer02" value="<%= userSession.name %> " readonly 
                  name='email'>
                </div>
            
                <div class="col-md-4">
                  <label for="validationServer02" class="form-label">Tipo de cliente</label>
                  <input type="text" class="form-control " id="validationServer02" value="<%= userSession.type %> " readonly 
                  name='email'>
                </div>
        </form>


      <p class="card-text">Estos son los proyectos a los que aportaste:</p>
    </div>
    <ul class="list-group list-group-flush">
