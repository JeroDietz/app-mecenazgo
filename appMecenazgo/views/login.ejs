
  <%- include('./partials/head.ejs', {Titulo : 'Mecenazgo | Login'}) %> 


  <%- include('./partials/header') -%> 

  <h1 style="text-align: center;">Iniciar sesión</h1>

  <form method="POST" class="row g-3" style="margin: 5%;">
    <div class="col-auto">
      <label for="staticEmail2" class="visually-hidden"></label>
      <input type="email" class="form-control-plaintext" id="staticEmail2" placeholder="email@ejemplo.com" name="name" required>
    </div>

    <div class="col-auto">
      <label for="inputPassword2" class="visually-hidden"></label>
      <input type="password" class="form-control" id="inputPassword2" placeholder="Contraseña" name="contraseña" required>
    </div>
    
    <div class="col-auto">
      <button type="submit" class="btn btn-success mb-3" >Iniciar sesión</button>
    </div>
    <p class="fw-bold">¿No estas registrado? Hace click <a href="http://localhost:3000/users/register">aquí</a> !</p>
  </form>
  
  <%- include('./partials/footer') -%> 

